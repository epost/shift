package net.shift
package application

import http._

trait Boot {
  def boot: BootConfig
}

object Application extends BootConfig {

  type AccessControlFunc = Request => ((Request => Response) => Response)

  private var ctx: Context = _
  private var cfg: BootConfig = _

  private[shift] def setup(ctx: Context, cfg : BootConfig) {
    this.ctx = ctx
    this.cfg = cfg
  }

  def context = ctx
  def rewrite = cfg.rewrite
  def contextPath = cfg.contextPath
  def handleRequest = cfg.handleRequest
  def templateLookupSuffixes = cfg.templateLookupSuffixes
  def siteMap = cfg.siteMap


}

